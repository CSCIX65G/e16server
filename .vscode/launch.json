{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Remote Debug",
            "program": "${workspaceFolder}/.build/aarch64-unknown-linux/debug/e16server",
            "initCommands": [
                "env LD_LIBRARY_PATH=/usr/lib/swift/linux",
                "file ${workspaceFolder}/.build/aarch64-unknown-linux/debug/e16server",
                "platform select remote-linux",
                "platform connect connect://192.168.0.15:8081"
            ],            
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}
